{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Museum",
    "version" : "0.1.0"
  },
  "servers" : [ {
    "url" : "http://localhost:10010/api/v1"
  } ],
  "paths" : {
    "/exhibition" : {
      "get" : {
        "description" : "Returns list of pictures with description of them",
        "operationId" : "picture",
        "parameters" : [ {
          "name" : "date",
          "in" : "query",
          "description" : "FIltering date",
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/PictureResponse"
                }
              }
            }
          },
          "default" : {
            "description" : "Error",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "x-swagger-router-controller" : "exhibit-controller"
    },
    "/swagger" : {
      "x-swagger-pipe" : "swagger_raw"
    }
  },
  "components" : {
    "schemas" : {
      "PictureResponse" : {
        "type" : "array",
        "items" : {
          "$ref" : "#/components/schemas/Picture"
        }
      },
      "Picture" : {
        "required" : [ "date" ],
        "type" : "object",
        "properties" : {
          "title" : {
            "type" : "string"
          },
          "author" : {
            "type" : "string"
          },
          "year" : {
            "type" : "string"
          },
          "description" : {
            "type" : "string"
          },
          "picture" : {
            "type" : "string"
          },
          "date" : {
            "type" : "string"
          }
        }
      },
      "ErrorResponse" : {
        "required" : [ "message" ],
        "type" : "object",
        "properties" : {
          "message" : {
            "type" : "string"
          }
        }
      }
    }
  }
}